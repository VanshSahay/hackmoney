# Example configuration for Alice node
# Copy to .env to use

# Node Identity
NODE_NAME=alice.eth

# Peer Discovery
PEERS=bob.eth,charlie.eth

# Optional: Network Configuration
# PORT=auto  # Will auto-generate port 3142 from "alice.eth"

# Blockchain Configuration
RPC_URL=http://localhost:8545
CHAIN_ID=31337
SETTLEMENT_ADDRESS=0x0000000000000000000000000000000000000000

# Optional: Wallet Configuration
# PRIVATE_KEY=0x...   # If not set, auto-generated and saved

# Optional: Initial Capacities
# CAPACITY_TOKEN_0=0x0000000000000000000000000000000000000001
# CAPACITY_AMOUNT_0=1000000000000000000000
